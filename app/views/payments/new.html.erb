<h2> New Payment </h2>

<%= form_with(model: [@expense, @payment], url: expense_payments_path(@expense), method: :post, id: 'payment-form') do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount %>
  </div>

  <div>
    <% @expenses.each_with_index do |expense, index| %>
      <%= check_box_tag 'payment[expense_ids][]', expense.id %>
      <%= label_tag "payment_expense_#{expense.id}", expense.name %> <br>
    <% end %>
  </div>

  <div>
    <%= form.submit 'Create Payment' %>
  </div>
<% end %>
