<h2>New Expense</h2>

<%= form_with(model: @expense, url: expenses_path, method: :post, class: 'expense-form') do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :icon %>
    <%= form.file_field :icon %>
  </div>
  <div>
    <%= form.submit 'Save'%>
  </div>
<% end %>